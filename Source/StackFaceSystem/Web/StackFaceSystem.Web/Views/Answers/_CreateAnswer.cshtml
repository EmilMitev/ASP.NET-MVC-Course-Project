@model StackFaceSystem.Web.ViewModels.Posts.InputAnswerViewModel

<fieldset>
    <legend>Add new answer</legend>
    @using (Html.BeginForm("CreateAnswer", "Answers", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.PostId);
        <div class="form-group">
            @Html.EditorFor(m => m.Content, new { placeholder = "Enter your content" })
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button onclick="hideAddAnswer()" type="reset" class="btn btn-danger">Cancel</button>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
    }
</fieldset>