@model StackFaceSystem.Web.ViewModels.Posts.EditPostViewModel

<fieldset>
    <legend>Add new post</legend>
    @using (Html.BeginForm("EditPost", "Posts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger" })

        @Html.HiddenFor(x => x.EncodedId)
        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            @Html.EditorFor(m => m.Title)
        </div>

        <div class="form-group">
            @Html.EditorFor(m => m.Content, new { placeholder = "Enter your content" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(m => m.Category, new { @class = "form-control custom-form-control", disabled = "disabled" })
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-success pull-right">Submit</button>
                <a href="" id="backEditPost" class="btn btn-danger pull-right">Back</a>
            </div>
        </div>
    }
</fieldset>