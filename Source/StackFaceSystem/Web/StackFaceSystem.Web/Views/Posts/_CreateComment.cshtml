@model StackFaceSystem.Web.ViewModels.Posts.InputCommentViewModel
<div data-create="comment">
    <fieldset>
        <legend>Add new comment</legend>
        @using (Html.BeginForm("Create", "Posts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.EditorFor(m => m.Content, new { placeholder = "Enter your content" })
            </div>

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button onclick="hideAddComment()" type="reset" class="btn btn-danger">Cancel</button>
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>
        }
    </fieldset>
</div>