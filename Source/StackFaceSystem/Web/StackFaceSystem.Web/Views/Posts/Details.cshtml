@model StackFaceSystem.Web.ViewModels.Posts.DetailsPostWithPagableAnswersViewModel
<hr class="style" />
<h3>@Model.Post.Title</h3>
<hr class="style" />

<div class="well">
    <div class="row">

        <div class="col-md-2">
            <div class="forum-well text-center">
                <a href="#"><i class="glyphicon glyphicon-thumbs-up"></i></a>
                <div class="row">@Model.Post.VotesSum</div>
                <a href="#"><i class="glyphicon glyphicon-thumbs-down"></i></a>
            </div>
        </div>

        <div class="col-md-10">
            <p>@Model.Post.SanitizedContent</p>
            <div class="row post-info note">
                <hr class="post-info" />
                <span class="pull-left">
                    before @Html.DisplayFor(x => x.Post.CreatedOn) category: <a href="#">@Model.Post.Category</a> author: <a href="#">@Model.Post.Author</a>
                </span>
            </div>

            <hr class="post-info" />

            <div>
                <i class="glyphicon glyphicon-tag"></i>
                @foreach (var tag in Model.Post.Tags)
                {
                    <a href="#" class="label label-default">@tag</a>
                }
                <a href="#" class="pull-right btn btn-primary btn-sm"><i class="glyphicon glyphicon-comment"></i>  Answer</a>
            </div>
        </div>
    </div>
</div>
<div class="container col-md-12">
    <h4>Answers</h4>
    <hr class="style" />
</div>
<div class="panel panel-default">
    @foreach (var answer in Model.Answers)
    {
        @Html.Partial("_AnswersOnPost", answer)
    }
</div>