@model StackFaceSystem.Web.ViewModels.Answers.AnswersViewModel

<div class="modal fade" id="@("editModal" + Model.Id)" role="dialog" data-id=@Model.Id>
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Edit your answer</h3>
            </div>
            <div class="modal-body">
                @Html.EditorFor(m => m.Content)
            </div>
            <div class="modal-footer">
                @* TODO: Fix add button!!!!! *@
                <button type="button" class="btn btn-default" data-action="save" data-id=@Model.Id>Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>