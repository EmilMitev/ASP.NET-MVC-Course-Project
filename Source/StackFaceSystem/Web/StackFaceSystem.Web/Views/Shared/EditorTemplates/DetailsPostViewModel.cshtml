@model StackFaceSystem.Web.ViewModels.Posts.DetailsPostViewModel

<div class="modal fade" id="@("editModal" + Model.Id)" role="dialog" data-id=@Model.Id>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Edit your post</h3>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("EditPost", "Posts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.EditorFor(m => m.Title)
                    </div>

                    <div class="form-group">
                        @Html.EditorFor(m => m.Content, new { placeholder = "Enter your content" })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Category, new { @class = "form-control custom-form-control", disabled = "disabled" })
                    </div>

                    <div class="form-group">
                        @Html.EditorFor(m => m.Tags, new { placeholder = "Enter your tags here separated by space" })
                    </div>
                }
            </div>
            <div class="modal-footer">
                @* TODO: Fix add button!!!!! *@
                <button type="button" class="btn btn-default" data-action="save" data-id=@Model.Id>Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>