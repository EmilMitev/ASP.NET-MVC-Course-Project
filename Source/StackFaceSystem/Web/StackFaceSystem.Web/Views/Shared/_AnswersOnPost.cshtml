@model StackFaceSystem.Web.ViewModels.Posts.AnswersViewModel
<div class="row">
    <div class="col-md-12">

        <div class="col-md-2">
            <div class="forum-well text-center">
                <a href="#"><i class="glyphicon glyphicon-thumbs-up"></i></a>
                <div class="row">@Model.Rating</div>
                <a href="#"><i class="glyphicon glyphicon-thumbs-down"></i></a>
            </div>
        </div>

        <div class="col-md-10">
            <p>@Model.SanitizedContent</p>
            <div class="row post-info note">
                <hr class="post-info" />
                <span class="pull-left">
                    before @((DateTime.UtcNow - Model.CreatedOn).Hours) author <a href="#">@Model.Author</a>
                </span>
            </div>
            <hr class="post-info" />
            <a href="#" class="pull-right btn btn-primary btn-sm"><i class="glyphicon glyphicon-comment"></i>  Comment</a>
        </div>
        <div class="col-lg-offset-1 col-md-11">
            @*@foreach (var comment in Model.Answers)
            {
                @Html.Partial("_CommentsOnAnswer", comment)
            }*@
        </div>
    </div>
</div>
