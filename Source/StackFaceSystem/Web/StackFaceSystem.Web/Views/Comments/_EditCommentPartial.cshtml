@model StackFaceSystem.Web.ViewModels.Comments.EditCommentViewModel

<fieldset>
    <legend>Update your answer</legend>
    @using (Html.BeginForm("EditComment", "Comments", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger" })

        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            @Html.EditorFor(m => m.Content, new { placeholder = "Enter your content" })
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-success pull-right">Save</button>
                <a href="" class="btn btn-danger pull-right">Back</a>
            </div>
        </div>
    }
</fieldset>
