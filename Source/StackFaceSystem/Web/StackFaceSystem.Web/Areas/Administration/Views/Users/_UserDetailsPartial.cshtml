@model StackFaceSystem.Web.Areas.Administration.ViewModels.Users.UserViewModel

<h3>Id: @Model.Id</h3>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">User's info</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6"><strong>Username: </strong></div>
            <div class="col-md-6 clickable">@Model.Username</div>
        </div>
        <div class="row">
            <div class="col-md-6"><strong>Email: </strong></div>
            <div class="col-md-6">@Model.Email</div>
        </div>
        <div class="row">
            <div class="col-md-6"><strong>Role: </strong></div>
            <div class="col-md-6">@Model.Role</div>
        </div>
        <div class="row">
            <div class="col-md-6"><strong>Set New Role: </strong></div>
            <div class="col-md-6">
                <select id="newRoleSelector">
                    <option value="User">User</option>
                    <option value="Administrator">Administrator</option>
                    <option value="Moderator">Moderator</option>
                </select>
            </div>
        </div>
    </div>
    <div data-action="editUserRole" data-id="@Model.Id" class="btn btn-primary">Save</div>
</div>
